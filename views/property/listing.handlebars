{{> header }}
<style>
    .page{{page}} {
        border: 1px;
        padding: 0 5px;
        background: red;
        font-size: 31px;
        color: #fff;
    }
</style>
<h1>Properties..</h1>

<p><a href="/property/assets">Click Here</a> to see your active assets in the gallery</p>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        {{#each pages }}
            <li class="page-item"><a class="page-link page{{this}}" href="?page={{this}}">{{this}}</a></li>
        {{/each}}
    </ul>
</nav>

<div class="row mb-2" id="propertiesList">

    {{#each allProperties}}
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary">{{ this.location }}</strong>
                <h3 class="mb-0">
                    <a class="text-dark" href="#">{{ this.name }}</a>
                </h3>
                <div class="mb-1 text-muted">{{ this.createdAt }}</div>
                <p class="card-text mb-auto"> {{ this.description }}</p>
                <pre>

                </pre>
            </div>
            {{#each this.property_image }}
                {{#if @first}}
                    <img class="card-img-right flex-auto d-none d-md-block" alt="{{ this.name }}" style="width: 200px; height: 250px;" src="../uploads/property_images/{{ this.filename }}" data-holder-rendered="true">
                {{/if}}
            {{/each }}
        </div>
    </div>
    {{/each}}

</div>

{{> footer }}